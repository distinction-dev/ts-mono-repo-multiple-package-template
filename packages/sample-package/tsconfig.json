{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "incremental": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "./lib/",
    "declarationDir": "./lib/",
    "composite": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
     "ES2022", "DOM"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "/__tests__/**/*.ts"
  ]
}